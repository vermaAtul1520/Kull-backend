{
  "info": {
    "name": "KULL Platform API v2.1",
    "description": "Complete API collection for KULL Platform with updated password management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "kull-api-v2.1",
    "version": "2.1.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "YOUR_JWT_TOKEN",
      "type": "string"
    },
    {
      "key": "communityId",
      "value": "YOUR_COMMUNITY_ID",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "YOUR_USER_ID",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"emailOrPhone\": \"user@example.com\",\n  \"password\": \"yourpassword\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Pending Users (SuperAdmin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/users/pending",
              "host": ["{{baseUrl}}"],
              "path": ["users", "pending"]
            }
          }
        },
        {
          "name": "City Search",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/users/city-search?query=delhi",
              "host": ["{{baseUrl}}"],
              "path": ["users", "city-search"],
              "query": [
                {
                  "key": "query",
                  "value": "delhi"
                }
              ]
            }
          }
        },
        {
          "name": "Family Tree Search",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/users/family-tree/search?q=rajesh&gotra=Kashyap&limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["users", "family-tree", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "rajesh"
                },
                {
                  "key": "gotra",
                  "value": "Kashyap"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Update Own Profile",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"occupation\": \"Engineer\",\n  \"address\": \"New Delhi\",\n  \"gotra\": \"Kashyap\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["users", "profile"]
            }
          }
        },
        {
          "name": "Update User (Admin)",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"communityStatus\": \"approved\",\n  \"roleInCommunity\": \"moderator\",\n  \"status\": true\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Assign Community",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"communityId\": \"{{communityId}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}/assignCommunity",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}", "assignCommunity"]
            }
          }
        },
        {
          "name": "Delete User (Admin)",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Communities",
      "item": [
        {
          "name": "Create Community",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Community\",\n  \"description\": \"Community description\",\n  \"createdBy\": \"{{userId}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/communities/create",
              "host": ["{{baseUrl}}"],
              "path": ["communities", "create"]
            }
          }
        },
        {
          "name": "List Communities (SuperAdmin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/communities?filter[name]=Test&sort=-createdAt&limit=20&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["communities"],
              "query": [
                {
                  "key": "filter[name]",
                  "value": "Test"
                },
                {
                  "key": "sort",
                  "value": "-createdAt"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Community by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/communities/{{communityId}}",
              "host": ["{{baseUrl}}"],
              "path": ["communities", "{{communityId}}"]
            }
          }
        },
        {
          "name": "Get Community Users (With Passwords for Admins)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/communities/{{communityId}}/users?filter[gender]=male&sort=firstName&limit=50&projection=firstName,email,phone,password",
              "host": ["{{baseUrl}}"],
              "path": ["communities", "{{communityId}}", "users"],
              "query": [
                {
                  "key": "filter[gender]",
                  "value": "male",
                  "description": "Filter by gender"
                },
                {
                  "key": "sort",
                  "value": "firstName",
                  "description": "Sort by first name"
                },
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "projection",
                  "value": "firstName,email,phone,password",
                  "description": "Include password field (admin only)"
                }
              ]
            }
          }
        },
        {
          "name": "Add User to Community (With Password)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"9876543210\",\n  \"password\": \"SecurePassword123\",\n  \"gender\": \"male\",\n  \"occupation\": \"Engineer\",\n  \"cGotNo\": \"GT001\",\n  \"gotra\": \"Kashyap\",\n  \"subGotra\": \"Branch1\",\n  \"roleInCommunity\": \"member\",\n  \"address\": \"New Delhi\",\n  \"pinCode\": \"110001\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/communities/{{communityId}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["communities", "{{communityId}}", "users"]
            }
          }
        },
        {
          "name": "Get Community Officers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/communities/{{communityId}}/users/orgofficers",
              "host": ["{{baseUrl}}"],
              "path": ["communities", "{{communityId}}", "users", "orgofficers"]
            }
          }
        },
        {
          "name": "Get Gotra Detail",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/communities/{{communityId}}/gotraDetail",
              "host": ["{{baseUrl}}"],
              "path": ["communities", "{{communityId}}", "gotraDetail"]
            }
          }
        },
        {
          "name": "Get Configuration",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/communities/{{communityId}}/configuration",
              "host": ["{{baseUrl}}"],
              "path": ["communities", "{{communityId}}", "configuration"]
            }
          }
        },
        {
          "name": "Create/Update Configuration",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"banner\": [\"url1\", \"url2\"],\n  \"addPopup\": \"popup_url\",\n  \"gotra\": [\n    {\n      \"name\": \"Kashyap\",\n      \"subGotra\": [\"Branch1\", \"Branch2\"]\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/communities/{{communityId}}/configuration",
              "host": ["{{baseUrl}}"],
              "path": ["communities", "{{communityId}}", "configuration"]
            }
          }
        }
      ]
    },
