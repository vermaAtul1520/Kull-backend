# Server Configuration
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/kull

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (using Gmail as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM_NAME=KULL Platform
EMAIL_FROM_ADDRESS=noreply@kull.com

# SMS Configuration (Optional - for phone verification)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM_NUMBER=+1234567890

# File Upload Configuration
MAX_FILE_SIZE=5242880
MAX_VIDEO_SIZE=52428800
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW=900000

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@kull.com
SUPER_ADMIN_PASSWORD=change-this-password

# Community Settings
DEFAULT_COMMUNITY_MAX_MEMBERS=1000
COMMUNITY_JOIN_KEY_LENGTH=8

# Content Settings
DEFAULT_CONTENT_VISIBILITY=members
ALLOW_CONTENT_COMMENTS=true